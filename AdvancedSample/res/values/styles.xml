<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"/>
    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="Theme.SampleApp" parent="Base.Theme.SampleApp"/>

    <style name="Base.Theme.SampleApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#E60F18</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#448AFF</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">10dp</item>
    </style>


    <style name="About"/>

    <style name="About.Row.Container" parent="About">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="About.Row" parent="About">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="About.Row.Label" parent="About.Row">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="About.Row.Value" parent="About.Row">
        <item name="android:gravity">top</item>
    </style>


    <style name="RowItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#E8E8E8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SettingItemTextInput">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SettingItemEditText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsSwitchCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="AddDialog"/>

    <style name="AddDialog.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="AddDialog.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AdView"/>

    <style name="AdView.NestedScroll" parent="AdView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AdView.CountersTextView" parent="AdView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/counter_text</item>
    </style>

    <style name="AdView.LogsTextView" parent="AdView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/default_stats_console_text</item>
    </style>


    <style name="TestCaseSettings"/>

    <style name="TestCaseSettings.NumericEditText" parent="TestCaseSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
        <item name="android:padding">10dp</item>
        <item name="android:digits">0123456789.</item>
    </style>
</resources>
